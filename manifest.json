{
  "name":  "mark et cap",
  "version": "1.2",
  "manifest_version": 2,
  "description": "Timing is everything! Use 'cashtags'($) to navigate to your trading platform/exchange or copy directly to clipboard!",
  "permissions": [
    "contextMenus",
    "http://*/*",
    "https://*/*",
    "activeTab",
    "storage", 
    "notifications",
    "tabs",
    "https://www.gstatic.com/firebasejs/8.3.0/firebase.js"
  ],
  "background": {
    "page": "background.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.twitter.com/*", 
        "*://*.marketwatch.com/*", 
        "*://*.barchart.com/*",
        "*://*.fool.com/*",
        "*://finance.yahoo.com/*",
        "*://*.zacks.com/*", 
        "*://*.finviz.com/*",
        "*://*.swaggystocks.com/*",
        "*://*.stocktwits.com/*", 
        "*://*.benzinga.com/*",
        "*://*.coindesk.com/*",
        "*://*.cryptonews.com/*",
        "*://*.coingecko.com/*",
        "*://*.coinmarketcap.com/*",
        "*://*.blockfolio.com/*",
        "*://*.defipulse.com/*",
        "*://*.reddit.com/*",
        "*://*.discord.com/*",
        "*://*.youtube.com/*"
      ],
      "js": [
        "get_symbol.js"
      ]
    }
  ],
  "update_URL": "https://edge.microsoft.com/extensionwebstorebase/v1/crx",
  "content_security_policy": "script-src 'self' https://www.gstatic.com/ https://*.firebaseio.com https://www.googleapis.com; object-src 'self'",
  "icons": {
    "16": "icons/MEC-16.png",
    "32": "icons/MEC-32.png",
    "48": "icons/MEC-48.png",
    "128": "icons/MEC-128.png"
  },
  "browser_action": {
    "default_icon": {                    
      "16": "icons/MEC-16.png",
      "32": "icons/MEC-32.png",
      "48": "icons/MEC-48.png",
      "128": "icons/MEC-128.png"
    },
    "default_title": "mark et cap - timing is everything",
    "default_popup": "popup/mec-popup.html"
  },
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": false
  }
}
